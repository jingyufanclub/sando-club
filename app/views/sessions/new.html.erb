<section class="login form">
    <h1>Log In</h1>
    <%= form_with scope: :user, url: login_path, local: true do |f| %>
      <%= f.email_field :email, autofocus: true, placeholder: 'Email', label: false %><br><br>
      <%= f.password_field :password, placeholder: 'Password' %><br><br>
      <%= submit_tag "Log In"%>
    <% end %>
    <% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
    <% end %>
</section>
