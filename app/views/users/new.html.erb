<section class="signup form">
  <h1>Become a Member</h1>
  <%= form_with scope: :user, url: signup_path, local: true do |f|%>
    <%= f.text_field :name, label: false, placeholder: 'Name', autofocus: true %><br><br>
    <%= f.email_field :email, label: false, placeholder: 'Email' %><br><br>
    <%= f.text_area :bio, label: false, placeholder: 'Something about yourself' %><br><br>
    <%= f.password_field :password, label: false, placeholder: 'Password' %><br><br>
    <%= f.password_field :password_confirmation, label: false, placeholder: 'Password Confirmation' %><br><br>
    <%= f.submit "Join Sando Club" %>
  <% end %>
  <% if flash[:notice] %>
    <p><%= flash[:notice] %></p>
  <% end %>
</section>
